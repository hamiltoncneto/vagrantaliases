#Common alias for rails development

#setup gems
alias vgemsetup="vagrant ssh -c 'cd /vagrant; bundle install'"

#Start foreman
alias vforeman="vagrant ssh -c 'cd /vagrant; foreman start'"

#Rails db
alias vdbcreate="vagrant ssh -c 'cd /vagrant; rake db:create'"
alias vdbmigrate="vagrant ssh -c 'cd /vagrant; rake db:migrate'"
alias vdbseed="vagrant ssh -c 'cd /vagrant; rake db:seed'"
alias vdbconsole="vagrant ssh -c 'cd /vagrant; rails c'"

#Rails Server
alias vrailsserver="vagrant ssh -c 'cd /vagrant; rails s '"

#Show development logs
alias vlogs="vagrant ssh -c 'cd /vagrant; tail -f log/development.log '"